<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hmsphr.jdj.Activities.WelcomeActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:src="@drawable/full_logo"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="0dp" />
        </RelativeLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/welcomeText"
            android:layout_below="@+id/welcomeTitle"
            android:layout_alignLeft="@+id/welcomeTitle"
            android:layout_alignStart="@+id/welcomeTitle"
            android:layout_alignBottom="@+id/imageView"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/welcomeTitle"
            android:layout_alignEnd="@+id/welcomeTitle"
            android:editable="false"
            android:inputType="none"
            android:background="#000000"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="2"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/dialogBox"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@android:color/black"
            android:id="@+id/dialogOverlay">

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogbox"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:weightSum="1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/dialogTitle"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Text 1"
                android:id="@+id/dialogText"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:text="OK"
                android:id="@+id/dialogOK"
                android:background="@android:color/black"
                android:textColor="#DDDDDD"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/registerBox"
        android:visibility="visible" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@android:color/black"
            android:id="@+id/registerOverlay" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogbox"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:weightSum="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_notifsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/registerTitle"
                    android:text="@string/register_title"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_weight="0.23"
                android:layout_marginBottom="10dp"></FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/register_text1"
                    android:id="@+id/registerText1"
                    android:phoneNumber="false"
                    android:layout_marginRight="20dp" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerShow"
                    android:background="#222222" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="10dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/register_text2"
                    android:id="@+id/registerText2"
                    android:phoneNumber="false"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/registerPhone"
                    android:textColor="#DDDDDD"
                    android:layout_weight="0.25"
                    android:background="#222222"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="0675471820" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/register_text3"
                android:id="@+id/registerText3" />

            <Button
                android:layout_width="112dp"
                android:layout_height="27dp"
                android:text="Enregistrer"
                android:id="@+id/registerOK"
                android:background="@android:color/black"
                android:textColor="#DDDDDD"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
